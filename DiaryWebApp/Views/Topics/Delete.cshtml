@model DiaryWebApp.Models.Topic

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Topic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Hours to learn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeToMaster)
        </dd>
        <dt class = "col-sm-2">
            Hours spent on topic
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeSpent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Source)
        </dd>
        <dt class = "col-sm-2">
            Starting date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartLearningDate)
        </dd>
        <dt class = "col-sm-2">
            Progress
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InProgress)
        </dd>
        <dt class = "col-sm-2">
            Completion date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompletionDate)
        </dd>
    </dl>
    
    <form asp-action="Delete" id="delete">
        <input id="id" type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-action="Index">Back to List</a>
    </form>
    
    <script>
        let deleteConfirm = document.getElementById("delete");
        deleteConfirm.addEventListener('submit', (event) => {
            event.preventDefault();
            let choice = confirm("the decision is final!");
            if (choice) {
            deleteConfirm.submit();
            } 
        });
    </script>
    

</div>
